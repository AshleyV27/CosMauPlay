
<div class="search-form-control form-group">
         <%= form_with url: cosplays_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a cosplay"
          %>
           <%= submit_tag "Search", class: "btn btn-primary btn-sm"  %>
        <% end %>
</div>


 <div class="container">
  <div class="cards">
    <% @cosplays.each do |cosplay| %>
      <div class="card card-grid">
      <div class="cosplay-image">
        <%= cl_image_tag cosplay.photo.key %>
      </div>
        <div class="card-body">
          <h4 class="card-title"><%= cosplay.name  %></h4>
          <p class="card-text"> Rs<%= cosplay.price%></p>
          <p class="card-text"><%= cosplay.category  %></p>
          <%= link_to "Show More", cosplay_path(cosplay), class: "btn btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
