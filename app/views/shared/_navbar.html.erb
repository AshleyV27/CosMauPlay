          <li class="nav-item active"> </li>
          <li class="nav-item"></li>
          <li class="nav-item dropdown">
            <%= image_tag "https://avatars.githubusercontent.com/u/112051440?v=4", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
